---
interface Props {
  id: string;
  method?: string;
  submitId: string;
  title: string;
  labelSubmit: string;
  formClass?: string;
  submitClass?: string;
}

const { id, method, submitId, title, labelSubmit, formClass, submitClass } = Astro.props;
---

<form method={method} id={id} class:list={['flex flex-col gap-6 rounded-md border p-6 font-geist', formClass]}>
  <h1 class="self-center text-2xl font-bold text-slate-700">{title}</h1>
  <slot />
  <button
    id={submitId}
    class:list={['rounded-md bg-slate-600 px-4 py-2 font-geist text-lg text-slate-50 transition hover:bg-slate-900', submitClass]}
    type="submit">
    {labelSubmit}
  </button>
</form>
