---
interface Props {
  id: string;
  path: string;
  buttonClass?: string;
}

const { id, path, buttonClass } = Astro.props;
---

<a
  id={id}
  class:list={['rounded-md bg-slate-600 px-4 py-2 font-geist text-lg text-slate-50 transition hover:bg-slate-900', buttonClass]}
  href={path}>
  <slot />
</a>
