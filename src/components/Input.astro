---
interface Props {
  id: string;
  type: string;
  label: string;
  inputContainerClass?: string;
}

const { id, type, label, inputContainerClass } = Astro.props;
---

<div class:list={['relative', inputContainerClass]}>
  <label for={id} class="absolute left-4 top-2 text-slate-400">{label}</label>
  <input
    id={id}
    name={id}
    class="rounded-md border border-slate-400 px-4 pb-2 pt-8 focus-within:border-slate-700 focus:border-slate-700 focus-visible:border-slate-700 focus-visible:outline-none active:border-slate-700"
    type={type}
  />
</div>
