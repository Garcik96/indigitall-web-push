---
import '@fontsource/geist-sans';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const indigitallApiKey = import.meta.env.INDIGITALL_API_KEY;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      src="/src/sdk/sdk.min.js"
      onload={`
        indigitall.init({
          appKey: '${indigitallApiKey}',
          workerPath: '/src/sdk/worker.min.js',
          logLevel: indigitall.LogLevel.DEBUG,
          requestLocation: true
        })
      `}
      async></script>
  </head>
  <body class="relative flex h-screen items-center justify-center">
    <Header />
    <slot />
  </body>
</html>
