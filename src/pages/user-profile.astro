---
import Layout from '../layouts/Layout.astro';

const { user } = Astro.locals;
---

<Layout title="Indigitall Web Push - Login">
  <section class="flex flex-col gap-8 font-geist">
    <h1 class="text-6xl font-bold text-slate-700">User profile</h1>
    <div class="flex flex-col">
      <p class="font-medium text-slate-500">Name: <span class="font-normal text-slate-700">{user.name}</span></p>
      <p class="font-medium text-slate-500">Email:<span class="font-normal text-slate-700"> {user.email}</span></p>
    </div>
  </section>
</Layout>
